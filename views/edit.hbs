<form method="POST" action="/songs/{{song.id}}/edit">
  <div>
    <input type="text" name="title" placeholder="Song title" value="{{song.title}}" />
  </div>

  <div>
    <input type="number" name="year" placeholder="Song year" value="{{song.year}}" />
  </div>

  <div>
    <input type="text" name="singer" placeholder="Singer" value="{{song.singer}}" />
  </div>

  <button type="submit">Edit Song</button>
</form>